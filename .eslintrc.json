{
	"env": {
		"browser": true,
		"es6": true
	},
	"extends": ["standard"],
	"globals": {
		"Atomics": "readonly",
		"SharedArrayBuffer": "readonly"
	},
	"parserOptions": {
		"ecmaVersion": 2018,
		"sourceType": "module"
	},
	"rules": {
		"semi": [2, "always"],
		"no-tabs": 0,
		"global-require": "off",
		"indent": ["error", "tab"],
		"quotes": [2, "double", { "avoidEscape": true }]
	}
}
